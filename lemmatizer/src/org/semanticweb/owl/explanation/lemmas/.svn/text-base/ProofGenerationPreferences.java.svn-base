public class ProofGenerationPreferences {

    private static ProofGenerationPreferences instances = new ProofGenerationPreferences();

    private boolean attemptToCollapseProof = false;

    private ProofGenerationPreferences() {
    }

    public static ProofGenerationPreferences getInstances() {
        return instances;
    }

    public boolean isAttemptToCollapseProof() {
        return attemptToCollapseProof;
    }

    public void setAttemptToCollapseProof(boolean attemptToCollapseProof) {
        this.attemptToCollapseProof = attemptToCollapseProof;
    }
}
